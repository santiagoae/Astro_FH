---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  author: CollectionEntry<"author">;
}

// console.log(Astro.props.author.data);
const { author } = Astro.props;
const { name, avatar, twitter, linkedIn, github, bio, subtitle } = author.data;
---

<div class="max-w-lg mx-auto bg-white rounded-lg shadow-md p-5">
  <Image
    class="size-32 rounded-full mx-auto"
    src={avatar}
    alt="Profile picture"
    quality="low"
    loading="lazy"
  />
  <h2 class="text-center text-2xl font-semibold mt-3">{name}</h2>
  <p class="text-center text-gray-600 mt-1">{subtitle}</p>
  <div class="flex justify-center mt-5">
    <a
      href={twitter}
      target="_blank"
      class="text-blue-500 hover:text-blue-700 mx-3">Twitter</a
    >
    <a
      href={linkedIn}
      target="_blank"
      class="text-blue-500 hover:text-blue-700 mx-3">LinkedIn</a
    >
    <a
      href={github}
      target="_blank"
      class="text-blue-500 hover:text-blue-700 mx-3">GitHub</a
    >
  </div>
  <div class="mt-5">
    <h3 class="text-xl font-semibold">Bio</h3>
    <p class="text-gray-600 my-2">
      {bio}
    </p>
    <a
      href={`/blog/${author.id}`}
      class="bg-blue-500 text-white px-2 py-1 rounded-lg">Leer MÃ¡s</a
    >
  </div>
</div>
