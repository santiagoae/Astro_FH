---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <ViewTransitions />
  </head>
  <body class="bg-gray-900">
    <main class="mb-10 max-w-5xl m-auto p-2">
      <slot />
    </main>
  </body>
</html>
